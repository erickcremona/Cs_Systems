                            <Button x:Name="btnCalcular" IsEnabled="False" TabIndex="11" Padding="0" BorderThickness="0" Cursor="Hand" ToolTip="Calcular Valores" Margin="595,56,0,0" HorizontalAlignment="Left" Width="79" Height="40" VerticalAlignment="Top" RenderTransformOrigin="0.495,0.118" Click="btnCalcular_Click">
                                <Button.Background>
                                    <ImageBrush/>
                                </Button.Background>
                                <Button.ContentTemplate>
                                    <DataTemplate>
                                        <TextBlock  Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center"  Margin="0" Padding="0" Height="32" Width="38">
                                            <TextBlock.Background>
                                                <ImageBrush ImageSource="/Cs_Notas;component/Imagens/Calculadora.png"/>
                                            </TextBlock.Background>
                                            <TextBlock.Style>
                                                <Style TargetType="{x:Type TextBlock}">
